{
  "mcpServers": {
    "Framelink MCP for Figma": {
      "command": "npx",
      "args": [
        "-y",
        "figma-developer-mcp",
        "--figma-api-key=YOUR_FIGMA_TOKEN",
        "--stdio"
      ]
    },
    "XcodeBuildMCP": {
      "command": "npx",
      "args": [
        "-y",
        "xcodebuildmcp@latest"
      ],
      "autoApprove": [
        "build_sim",
        "build_run_sim",
        "screenshot",
        "tap",
        "describe_ui",
        "discover_projs",
        "list_schemes",
        "gesture"
      ],
      "disabledTools": [],
      "disabled": false
    }
  }
}
